<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_video_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="navy.chris.mytube.VideoListActivity">


    <ImageButton
        android:layout_width="128dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/video_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="128dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/cast_album_art_placeholder"
        android:id="@+id/video_two"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/video_one"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/video_one"
        android:layout_marginStart="66dp"
        android:id="@+id/title1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title2"
        android:layout_alignTop="@+id/video_two"
        android:layout_alignStart="@+id/title1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/published_one"
        android:layout_alignBottom="@+id/video_one"
        android:layout_alignStart="@+id/title1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/publish_two"
        android:layout_alignBottom="@+id/video_two"
        android:layout_alignStart="@+id/title2" />
    " />


</RelativeLayout>
